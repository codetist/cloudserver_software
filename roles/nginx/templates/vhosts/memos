upstream backend_memos {
  server 127.0.0.1:5230;
  keepalive 32;
}

upstream backend_mortis {
  server 127.0.0.1:5231;
  keepalive 32;
}

server {
  listen 80;
  listen [::]:80;
  server_name {{ memos_subdomain }}.{{ hetzner_dns_zone }};

  location / {
    return 301 https://$host$request_uri;
  }
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;

  server_name {{ memos_subdomain }}.{{ hetzner_dns_zone }};
  client_max_body_size 32m;

  ssl_certificate /etc/letsencrypt/live/{{ memos_subdomain }}.{{ hetzner_dns_zone }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ memos_subdomain }}.{{ hetzner_dns_zone }}/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/{{ memos_subdomain }}.{{ hetzner_dns_zone }}/chain.pem;

  # Check country restrictions (defined in nginx.conf)
  if ($allowed_continent = no) {
    return 444;
  }

  if ($allowed_country = no) {
    # 444 is a custom nginx http return code,
    # it just closes the connection silently
    return 444;
  }

  # include internal authelia auth request endpoint
  include /etc/nginx/snippets/authelia_internal.conf;

  # enable endpoints that are required for API access
  # order is important, regex location needs to be before
  # any static string location
  #
  # allow app to load attachments, bypassing Authelia
  location ~ ^/(file)(/|$) {
    proxy_http_version 1.1;
    proxy_set_header Connection "";
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    proxy_pass http://backend_memos;
  }

  # Add mortis as a proxy to the older API version of
  # memos 0.21, workaround for Moe Memos app
  # and bypass Authelia for API

  location /api/v1/ {
    proxy_http_version 1.1;
    proxy_set_header Connection "";
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    proxy_pass http://backend_memos;
  }

  location /o/r/ {
    proxy_http_version 1.1;
    proxy_set_header Connection "";
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    proxy_pass http://backend_mortis;
  }

  # memos
  location / {
    # redirect to authelia, in case user is not logged in with authelia
    include /etc/nginx/snippets/authelia_auth.conf;

    # once logged in with authelia, requests get processed here....
    proxy_http_version 1.1;
    proxy_set_header Connection "";
    proxy_set_header Host $http_host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    proxy_pass http://backend_memos;
  }
}
