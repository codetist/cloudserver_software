upstream backend_authelia {
  server localhost:9099;
  keepalive 32;
}

server {
  listen 80;
  listen [::]:80;
  server_name {{ auth_subdomain }}.{{ hetzner_dns_zone }};

  location / {
    return 301 https://$host$request_uri;
  }
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;

  server_name {{ auth_subdomain }}.{{ hetzner_dns_zone }};

  ssl_certificate /etc/letsencrypt/live/{{ auth_subdomain }}.{{ hetzner_dns_zone }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ auth_subdomain }}.{{ hetzner_dns_zone }}/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/{{ auth_subdomain }}.{{ hetzner_dns_zone }}/chain.pem;

  # Check country restrictions (defined in nginx.conf)
  if ($allowed_continent = no) {
    return 444;
  }

  if ($allowed_country = no) {
    # 444 is a custom nginx http return code,
    # it just closes the connection silently
    return 444;
  }

  location / {
    proxy_set_header Host $host;
    proxy_set_header X-Original-URL $scheme://$http_host$request_uri;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $http_host;
    proxy_set_header X-Forwarded-URI $request_uri;
    proxy_set_header X-Forwarded-Ssl on;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Real-IP $remote_addr;

    # for websockets
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";

    client_body_buffer_size 128k;
    proxy_cache_bypass $cookie_session;
    proxy_no_cache $cookie_session;
    proxy_buffers 64 256k;

    proxy_pass http://backend_authelia;
  }

  location /metrics {
    deny all;
  }
}
