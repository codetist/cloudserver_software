upstream backend_kanboard {
  server localhost:9096;
  keepalive 32;
}

server {
  listen 80;
  listen [::]:80;
  server_name {{ tasks_subdomain }}.{{ hetzner_dns_zone }};

  location / {
    return 301 https://$host$request_uri;
  }
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;

  server_name {{ tasks_subdomain }}.{{ hetzner_dns_zone }};

  ssl_certificate /etc/letsencrypt/live/{{ tasks_subdomain }}.{{ hetzner_dns_zone }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ tasks_subdomain }}.{{ hetzner_dns_zone }}/privkey.pem;
  ssl_trusted_certificate /etc/letsencrypt/live/{{ tasks_subdomain }}.{{ hetzner_dns_zone }}/chain.pem;

  # Check country restrictions (defined in nginx.conf)
  if ($allowed_continent = no) {
    return 444;
  }

  if ($allowed_country = no) {
    # 444 is a custom nginx http return code,
    # it just closes the connection silently
    return 444;
  }

  # include internal authelia auth request endpoint
  include /etc/nginx/snippets/authelia_internal.conf;

  location / {
    # redirect to authelia, in case user is not logged in with authelia
    include /etc/nginx/snippets/authelia_auth.conf;

    # once logged in with authelia, requests get processed here....
    proxy_set_header Host $http_host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    proxy_pass http://backend_kanboard;
  }
}
